package menu_proyecto;


public class Menu_proyecto {

    public static void main(String[] args) {
 boolean repetir = true;
        int opcion = 0;
        while (repetir) {
            opcion = Integer.parseInt(JOptionPane.showInputDialog("Bienvenido al Menú\n"
                    + "1. Registro\n"
                    + "2. Ver inventario\n"
                    + "3. Registrar una venta\n"
                    + "4. Salir"));
            switch (opcion) {
                case 1:
                    // Opción vacía
                    break;
                case 2:
                    // Opción vacía
                    break;
                case 3:
                    // Opción vacía
                    break;
                case 4:
                    repetir = false;
                    JOptionPane.showMessageDialog(null, "Saliendo del sistema...");
                    break;
                default:
                    JOptionPane.showMessageDialog(null, "Error: Opción no válida.");
                    break;
            }
        }
    }
}
